@model IEnumerable<app2.Models.RespostaConvidados>
@{
    ViewData["Title"] = "ListaFinal";
}

<h1>ListaFinal</h1>
<hr />  
<table border="1" color="gray" width="20" href="100">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>     
            <th>Telefone</th>

        </tr>       
    </thead>       
    <tbody>
        <!--PARA fazer uma interação pela coleção ou método 
            criada em HomeController "ListaConvidados"-->
        @foreach (RespostaConvidados item in Model)
        {
            <tr><!-- Para construir uma linha-->
                <td>@item.Nome</td>
                <td>@item.Email</td>
                <td>@item.Telefone</td>
            </tr>
        }
    </tbody>
</table>
